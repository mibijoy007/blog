// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// the main schema/model
model Post {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  catagory    String
  userid      String
  userimage   String
  comments    String[]
}
